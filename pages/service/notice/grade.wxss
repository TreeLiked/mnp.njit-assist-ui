.picker-row {

  display: flex;
  align-items: center;
  width: 100%;
  justify-content: center;
  padding: 30px 0 10px 0;
}

.picker-label {

  font-size: 28rpx;
  color: #696969;
}

.picker-style {
  display: inline-block;
  background-color: #F6F6F6;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.item-container {
  border-radius: 200px;
  margin: 10px 5px;

}

.item-row {
  padding-top: 0px;
}

.item-label {
  color: #828282;
  font-size: 28rpx;
}

.item-value {
  color: #1C1C1C;
  font-size: 28rpx;
}

.content-card {
  border-bottom: 20rpx solid rgb(173, 27, 27) !important;
  border-radius: 200rpx !important;
}

.text {
  height: 30rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 30rpx;
  margin-top: 9rpx;
}

.bottom-popup {
  width: 100%;
  background: #fff;
  height: 320px;
  padding-top: 50px;
  overflow: auto;
  text-align: center;
  font-size: 28rpx;
  color: #555;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.detail-row {
  padding-bottom: 10px;
  display: flex;

}
.detail-label {
  color: #878787;
  width: 100px;
  text-align: right;
}