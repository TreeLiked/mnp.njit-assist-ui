.body {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  justify-content: center;
  font-size: 24rpx;
}

.table {
  width: 100%;
}

.th0 {
  background-color: #7BC8A4;
  color: white;
  display: flex;
  width: 100%;
  justify-content: space-around;
  height: 3rem;
  align-items: center;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 190rpx;
  align-items: center;
  vertical-align: center;
  margin-top: 20rpx;
}



.middle-div {
  height: 40px;
  display: flex;
  color: #878787;
  font-size: 25rpx;
  align-items: center;
  justify-content: center;
  margin-top: 6rpx;
}

.td {
  width: 40%;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 100%;
  margin-left: 5rpx;
  margin-right: 5rpx;
  border-radius: 6px;
}

.bottom-popup {
  width: 100%;
  background: #fff;
  height: 350px;
  padding-top: 50px;
  overflow: auto;
  text-align: center;
  font-size: 28rpx;
  color: #555;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.detail-row {
  padding-bottom: 10px;
  display: flex;

}
.detail-label {
  color: #878787;
  width: 100px;
  text-align: right;
}